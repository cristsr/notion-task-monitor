{
  "name": "notifier",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/notifier/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/notifier"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/notifier/package.json",
        "{workspaceRoot}/dist/apps/notifier/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/notifier/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "notifier:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "notifier:build:development"
        },
        "production": {
          "buildTarget": "notifier:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build:production"],
      "options": {
        "commands": [
          "nx build notifier --configuration production",
          "docker build -f apps/notifier/Dockerfile -t notifier:latest ."
        ],
        "parallel": false
      }
    },
    "docker:run": {
      "executor": "nx:run-commands",
      "dependsOn": ["docker:build"],
      "options": {
        "commands":  [
          "nx docker:stop notifier",
          "docker run -d --name notion-notifier --restart always -p 3943:3943 notifier:latest"
        ],
        "parallel": false
      }
    },
    "docker:stop": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker stop notion-notifier 2>nul || exit /b 0",
          "docker rm notion-notifier 2>nul || exit /b 0"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx docker:build notifier",
          "nx docker:run notifier"
        ],
        "parallel": false
      }
    }
  }
}
